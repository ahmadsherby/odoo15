<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="hr_employee_request_view_employee_form_inherit" model="ir.ui.view">
            <field name="name">hr.requests.hr.employee.view.form.inherit</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@name='button_box']" position="inside">
                    <button name="action_open_requests" class="oe_stat_button" icon="fa-paper-plane-o"
                            type="object" groups="hr_contract.group_hr_contract_manager">
                        <div class="o_stat_info">
                            <span class="o_stat_value">
                                <field name="requests_count"/>
                            </span>
                            <span class="o_stat_text">
                                Requests
                            </span>
                        </div>
                    </button>
                </xpath>

            </field>
        </record>

    </data>
</odoo>